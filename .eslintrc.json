{
  "env": {
    "browser": false,
    "commonjs": true,
    "es2016": true
  },
  "extends": "standard-with-typescript",
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": [
      "./packages/cli/tsconfig.json",
      "./packages/types/tsconfig.json"
    ]
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "max-len": [
      "error",
      {
        "code": 80
      }
    ]
  }
}
